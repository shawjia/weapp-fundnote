page {
  color: #333;
  font-size: 16px;
  background: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 0 0 100rpx;
  -webkit-font-smoothing: antialiased;
  font-family: 'PingFang SC', Helvetica, 'STHeiti STXihei', 'Microsoft YaHei', Tohoma, Arial, sans-serif;
}

view {
  box-sizing: inherit;
}

view::before,
view::after,
page::before,
page::after {
  box-sizing: inherit;
}

.fund-btn {
  margin-top: 20rpx;
}
