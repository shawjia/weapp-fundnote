<van-panel use-footer-slot footer-class="fund-total" wx:if="{{ fundList.length }}">

  <view class="fund-item">
    <view class="name">基金名称</view>
    <view class="latest">近日收益</view>
    <view>总收益</view>
  </view>

  <view class="fund-item" wx:for="{{ fundList }}" wx:key="add" bindtap="goEdit" data-id="{{ index }}">
    <view class="name">
      <view class="code-and-from">
        <text>{{ item.code }}</text>
        <text class="small from">{{ item.from }}</text>
      </view>
      <view class="small">{{ item.name }}</view>
    </view>
    <view class="latest">
      <view class="{{ item.color }}">{{ item.profit }}</view>
      <view class="small">{{ item.percent + '%'}}</view>
    </view>
    <view>
      <view class="{{ item.totalColor }}">{{ item.totalProfit }}</view>
      <view class="small">{{ item.date }}</view>
    </view>
  </view>


  <view slot="footer">
    <view class="{{ latestProfitColor }}"> 近日: {{ latestProfit }} </view>
    <view class="{{ allProfitColor }}"> 累计: {{ allProfit }} </view>
  </view>

</van-panel>

<van-button custom-class="fund-btn" size="large" bindtap="switchAdd">新增</van-button>

<footer />
