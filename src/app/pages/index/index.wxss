.fund-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #e6e6ea;
  padding: 10rpx 0;
}

.fund-item .name {
  flex: 2;
  text-align: left;
  padding-left: 30rpx;
}

.fund-item .latest {
  flex: 1;
}

.fund-item > view {
  flex: 1;
  white-space: nowrap;
  align-self: center;
  text-align: right;
  overflow: hidden;
  align-content: center;
}

.small {
  font-size: 75%;
  color: #888;
}

.win {
  color: #e64340;
}

.lose {
  color: #09bb07;
}

.fund-item .total {
  padding-right: 30rpx;
  text-align: right;
}

.fund-footer {
  width: 100%;
  box-sizing: border-box;
  text-align: right;
}

.fund-footer .win,
.fund-footer .lose
{
  width: 160rpx;
  display: inline-block;
}
